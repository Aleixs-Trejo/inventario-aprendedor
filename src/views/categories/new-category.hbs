{{> back-form backUrl = "/categories"}}
<section class="section__all--forms">
  <div class="container__form__container">
    <div class="container">
      <section class="section__form">
        <form action="/categories/register" method="POST" class="form">
          <div class="form__content">
            <h2 class="form__title">Registro de Categoría</h2>
            <div class="form__img">
              <figure class="login__figure">
                <img src="{{logoUrl}}" alt="Logo Company" class="login__img">
              </figure>
            </div>
            <section class="form__container">
              <article class="form__group">
                <input class="form__input" type="text" name="nombreCategoria" id="nombre_categoria" placeholder=" " title="Define el nombre de la categoría" value="{{nombreCategoria}}" required>
                <label for="nombre_categoria" class="form__label">Categoría:</label>
                <span class="form__line"></span>
              </article>
              <article class="form__group">
                <textarea class="form__input form__textarea" name="descripcionCategoria" id="descripcion_categoria" placeholder=" " title="Descrpción de la categoría" required>{{descripcionCategoria}}</textarea>
                <label for="descripcion_categoria" class="form__label">Descripción:</label>
                <span class="form__line"></span>
              </article>
              <button class="form__submit">Crear Categoría</button>
            </section>
          </div>
        </form>
      </section>
    </div>
  </div>
</section>