<section class="section__all--views">
  <div class="content__views">
    <div class="container">
      <div class="view__modal__container">
        <article class="delete__content">
          <div class="items__elements__title">
            <h5 class="items__name">Eliminar producto de almacén</h5>
          </div>
          <div class="sub__header">
            <div class="sub__header__container">
              <article class="sub__header__content">
                <section class="section__sub__header">
                  <article class="article__sub__header sub__header__actions">
                    <div class="sub__header__actions__container">
                      <div class="sub__header__action">
                        <a href="/stores" class="sub__header__link">
                          <figure class="sub__header__figure">
                            <img src="/assets/icon-back.svg" alt="Icon Back" class="sub__header__img">
                          </figure>
                        </a>
                        <span class="sub__header__span">Volver</span>
                      </div>
                    </div>
                  </article>
                </section>
              </article>
            </div>
          </div>
          <section class="items">
            <div class="items__container__elements">
              <section class="views__container--elements view__scrollbar">
                <div class="views__content--elements view__scrollbar store">
                  <div class="item__info store">
                    <article class="items__header items__grid store">
                      <div class="flex-c-c">Hecho por:</div>
                      <div class="flex-c-c">Cod:</div>
                      <div class="flex-c-c">Producto:</div>
                      <div class="flex-c-c">Descripción:</div>
                      <div class="flex-c-c">Proveedor:</div>
                      <div class="flex-c-c">Categoría:</div>
                      <div class="flex-c-c">Ubicacion:</div>
                      <div class="flex-c-c">Stock:</div>
                      <div class="flex-c-c">Min-Stock:</div>
                      <div class="flex-c-c">Fecha Registro:</div>
                    </article>
                    <article class="items__data items__grid store">
                      <div class="flex-c-c">{{store.almacenUsuario.usuario}}</div>
                      <div class="flex-c-c">{{store.almacenProducto.cod}}</div>
                      <div class="flex-c-c">{{store.almacenProducto.nombreProducto}}</div>
                      <div class="flex-c-c">{{store.almacenProducto.descripcionProducto}}</div>
                      <div class="flex-c-c">{{store.almacenProducto.proveedorProducto.nombreProveedor}}</div>
                      <div class="flex-c-c">{{store.almacenProducto.categoriaProducto.nombreCategoria}}</div>
                      <div class="flex-c-c">{{store.almacenStockUbicacion.nombreStockUbicacion}}</div>
                      <div class="flex-c-c">{{store.almacenStock}}</div>
                      <div class="flex-c-c">{{store.almacenMinStock}}</div>
                      <div class="flex-c-c">{{formatDateTime store.createdAt}}</div>
                    </article>
                  </div>
                </div>
              </section>
            </div>
          </section>
        </article>
        <section class="flex-c-c modal__delete">
          <article class="modal__delete--content">
            <h4 class="modal__delete--title">¿Estás seguro que deseas eliminar este producto de almacén?</h4>
            <div class="modal__delete--btns">
              <a href="/stores" class="modal__delete--btn">Cancelar</a>
              <a href="/stores/{{store._id}}/delete" class="modal__delete--btn delete__btn">Eliminar</a>
            </div>
          </article>
        </section>
      </div>
    </div>
  </div>
</section>