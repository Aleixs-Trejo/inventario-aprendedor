<section class="voucher">
  <div class="voucher__container">
    <div class="voucher__content">
      <section class="voucher__header">
        <h4 class="voucher__title">BOLETA ELECTRÓNICA</h4>
        <h4 class="voucher__id">Serie: {{venta._id}}</h4>
      </section>
      <section class="voucher__company">
        <h4 class="voucher__company--ruc">RUC: <span>{RUC_NEGOCIO}</span></h4>
        <h4 class="voucher__company--name">Razón Social: <span>{NOMBRE_NEGOCIO}</span></h4>
      </section>
      <section class="voucher__sale--info">
        <article class="sale__info">
          <p class="sale__data">{{formatDateTime venta.createdAt}}</p>
          <p class="sale__employee">Vendedor: {{venta.usuarioVenta.trabajadorUsuario.nombreTrabajador}} {{venta.usuarioVenta.trabajadorUsuario.apellidosTrabajador}}</p>
          <p class="sale__client">Cliente: {{venta.clienteVenta.nombreCliente}}</p>
        </article>
      </section>
      <section class="voucher__sale--details">
        <article class="voucher__sale--data">
          <div class="data__header voucher__grid">
            <span>Descripción</span>
            <span>Cantidad</span>
            <span>Precio Unit.</span>
            <span>Descuento</span>
            <span>Precio con Dscto.</span>
            <span>Total</span>
          </div>

          {{#each venta.productosVenta}}

            <div class="data__body voucher__grid">
              <span class="descripcion">{{this.almacenProducto.descripcionProducto}}</span>
              <span class="cantidad">{{../cantidadVenta}}</span>
              <span class="precio">{{this.almacenProducto.precioProducto}}</span>
              <span class="descuento">S/{{formatCurrency 0}}</span>
              <span class="precio__descuento">S/{{formatCurrency ../precioTotalVenta}}</span>
              <span class="total">S/{{formatCurrency ../precioTotalVenta}}</span>
            </div>

          {{/each}}
        </article>
        <article class="voucher__sale--params">
          <div class="sale__param">Sub total <span class="sub__total" data-subTotal="{{venta.precioTotalVenta}}"></span></div>
          <div class="sale__param">I.G.V. (18%) <span class="igv" data-igv="18"></span></div>
          <div class="sale__param">Total venta <span class="total__venta" data-total="{{venta.precioTotalVenta}}">{{formatCurrency venta.precioTotalVenta}}</span></div>
        </article>
      </section>
    </div>
  </div>
</section>