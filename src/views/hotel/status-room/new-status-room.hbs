{{> back-form backUrl = "/status-room"}}
<section class="section__all--forms">
  <div class="container__form__container">
    <div class="container">
      <section class="section__form">
        <form action="/status-room/register" method="POST" class="form">
          <div class="form__content">
            <h2 class="form__title">Registro de Estado</h2>
            <div class="form__img">
              <figure class="login__figure">
                <img src="{{logoUrl}}" alt="Logo Aprendedor" class="login__img">
              </figure>
            </div>
            <section class="form__container">
              <article class="form__group">
                <input class="form__input" type="text" name="nombreEstadoHabitacion" id="nombre_estado_habitacion" placeholder=" " title="Define el nombre del Estado" value="{{nombreEstadoHabitacion}}" required>
                <label for="nombre_estado_habitacion" class="form__label">Estado:</label>
                <span class="form__line"></span>
              </article>
              <article class="form__group">
                <textarea class="form__input form__textarea" name="descripcionEstadoHabitacion" id="descripcion_estado_habitacion" placeholder=" " title="Descrpción de la categoría" required>{{descripcionEstadoHabitacion}}</textarea>
                <label for="descripcion_estado_habitacion" class="form__label">Descripción:</label>
                <span class="form__line"></span>
              </article>
              <article class="form__group form__group--select">
                <label for="trabajos_habitacion" class="form__label--select">¿Inlcuye trbajos en habitación?</label>
                <select class="form__input" name="trabajosEnHabitacion" id="trabajos_habitacion">
                  <option value="" selected disabled>Selecciona una opción:</option>
                  <option value="no">No</option>
                  <option value="yes">Si</option>
                </select>
              </article>
              <button class="form__submit">Crear Estado</button>
            </section>
          </div>
        </form>
      </section>
    </div>
  </div>
</section>