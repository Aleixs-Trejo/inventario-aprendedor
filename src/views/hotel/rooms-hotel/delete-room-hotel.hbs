<section class="section__all--views">
  <div class="content__views">
    <div class="container">
      <div class="view__modal__container">
        <article class="delete__content">
          <div class="items__elements__title">
            <h5 class="items__name">Eliminar Habitación de recepción</h5>
          </div>
          <div class="sub__header">
            <div class="sub__header__container">
              <article class="sub__header__content">
                <section class="section__sub__header">
                  <article class="article__sub__header sub__header__actions">
                    <div class="sub__header__actions__container">
                      <div class="sub__header__action">
                        <a href="/rooms-hotel" class="sub__header__link">
                          <figure class="sub__header__action__figure">
                            <img src="/assets/icon-back.svg" alt="Icon Back" class="sub__header__action__img">
                          </figure>
                        </a>
                        <span class="sub__header__span">Volver</span>
                      </div>
                    </div>
                  </article>
                </section>
              </article>
            </div>
          </div>
          <section class="items">
            <div class="items__container__elements">
              <section class="views__container--elements view__scrollbar">
                <div class="views__content--elements view__scrollbar room__hotel">
                  <div class="item__info room__hotel">
                    <article class="items__header items__grid room__hotel">
                      <div class="flex-c-c">Agregado por:</div>
                      <div class="flex-c-c">Habitación:</div>
                      <div class="flex-c-c">Descripción:</div>
                      <div class="flex-c-c">Categoría:</div>
                      <div class="flex-c-c">Precio por Noche:</div>
                      <div class="flex-c-c">Estado:</div>
                      <div class="flex-c-c">Cant usos:</div>
                      <div class="flex-c-c">Fecha Registro:</div>
                    </article>
                    <article class="items__data items__grid room__hotel">
                      <div class="flex-c-c">{{roomHotel.usuarioRegistroHabitacionHotel.usuario}}</div>
                      <div class="flex-c-c">{{roomHotel.habitacionHotel.numeroHabitacion}}</div>
                      <div class="flex-c-c">{{roomHotel.habitacionHotel.descripcionHabitacion}}</div>
                      <div class="flex-c-c">{{roomHotel.habitacionHotel.categoriaHabitacion.nombreCategoriaHabitacion}}</div>
                      <div class="flex-c-c">S/{{formatCurrency roomHotel.precioHabitacionHotel}}</div>
                      <div class="flex-c-c"><span class="span__data__item status__room">{{roomHotel.estadoHabitacionHotel.nombreEstadoHabitacion}}</span> </div>
                      <div class="flex-c-c">{{roomHotel.cantidadUsosHabitacionHotel}}</div>
                      <div class="flex-c-c">{{formatDateTime roomHotel.createdAt}}</div>
                    </article>
                  </div>
                </div>
              </section>
            </div>
          </section>
        </article>
        <section class="flex-c-c modal__delete">
          <article class="modal__delete--content">
            <h4 class="modal__delete--title">¿Estás seguro que deseas eliminar esta Habitación de Recepción?</h4>
            <div class="modal__delete--btns">
              <a href="/rooms-hotel" class="modal__delete--btn">Cancelar</a>
              <a href="/rooms-hotel/{{roomHotel._id}}/delete" class="modal__delete--btn delete__btn">Eliminar</a>
            </div>
          </article>
        </section>
      </div>
    </div>
  </div>
</section>