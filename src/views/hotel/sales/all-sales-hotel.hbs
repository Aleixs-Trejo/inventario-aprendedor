<section class="section__all--views">
  <div class="content__views">
    <div class="container views__container">
      <div class="card__items">
        <div class="items__elements__title">
          <h5 class="items__name">Ventas a las habitaciones</h5>
        </div>
        {{#if (or (eq userRole "Recepcion") (eq userRole "Admin"))}}
          <div class="sub__header">
            <div class="sub__header__container">
              <article class="sub__header__content">
                <section class="section__sub__header">
                  <article class="article__sub__header sub__header__actions">
                    <div class="sub__header__actions__container">
                      <div class="sub__header__action">
                        <a href="/hotel" class="sub__header__link">
                          <figure class="sub__header__figure">
                            <img src="/assets/icon-back.svg" alt="Icon Back" class="sub__header__img">
                          </figure>
                        </a>
                        <span class="sub__header__span">Volver</span>
                      </div>
                      {{#if salesHotel}}
                        <div class="sub__header__action action__export--excel">
                          <a href="/hotel/sales/export-excel" class="sub__header__link">
                            <figure class="sub__header__figure">
                              <img src="/assets/icon-excel.svg" alt="Icon Export" class="sub__header__img">
                            </figure>
                          </a>
                          <span class="sub__header__span">Exportar</span>
                        </div>
                      {{/if}}
                      <div class="sub__header__action">
                        <a href="/hotel/sales/history" class="sub__header__link">
                          <figure class="sub__header__figure">
                            <img src="/assets/icon-history.svg" alt="Icon History" class="sub__header__img">
                          </figure>
                        </a>
                        <span class="sub__header__span">Historial</span>
                      </div>
                    </div>
                  </article>
                </section>
              </article>
            </div>
          </div>
        {{/if}}
        {{#if salesHotel}}
          <section class="items">
            <div class="items__container__elements">
              <section class="views__container--elements view__scrollbar">
                <div class="views__content--elements items__container sales__hotel">
                  <article class="items__header items__grid sales__hotel">
                    <div class="flex-c-c">Vendido por</div>
                    <div class="flex-c-c">Estado</div>
                    <div class="flex-c-c">Comentarios</div>
                    <div class="flex-c-c">Cant</div>
                    <div class="flex-c-c">Total</div>
                    <div class="flex-c-c">Desc</div>
                    <div class="flex-c-c">Adel</div>
                    <div class="flex-c-c">Rest</div>
                    <div class="flex-c-c">cn/reserva</div>
                    <div class="flex-c-c">Fecha</div>
                    <div class="flex-c-c">Ver</div>
                  </article>
                  <div class="items__data--values" id="data-container">
                    {{#each salesHotel}}
                      <div class="container__data">
                        <article class="items__data items__grid sales__hotel product__data">
                          <div class="flex-c-c">{{usuarioRegistroVentaHotel.usuario}}</div>
                          <div class="flex-c-c"><span class="span__data__item tipo__historial">{{estadoVentaHotel}}</span></div>
                          <div class="flex-c-c">{{#if comentariosVentaHotel}}{{comentariosVentaHotel}}{{else}}-{{/if}}</div>
                          <div class="flex-c-c">{{cantidadProductosVentaHotel}}</div>
                          <div class="flex-c-c">S/{{formatCurrency precioTotalVentaHotel}}</div>
                          <div class="flex-c-c">-S/{{formatCurrency descuentoTotalVentaHotel}}</div>
                          <div class="flex-c-c">S/{{formatCurrency pagoAdelantoVentaHotel}}</div>
                          <div class="flex-c-c">S/{{formatCurrency pagoRestanteVentaHotel}}</div>
                          <div class="flex-c-c"><span class="span__data__item tipo__historial">{{#if (eq tipoEntidad "Occupation")}}No{{else}}SÃ­{{/if}}</span></div>
                          <div class="flex-c-c">{{formatDateTime createdAt}}</div>
                          <div class="flex-c-c items__data--options">
                            <a href="/hotel/sales/{{_id}}/details" class="options__action">
                              <figure class="options__figure">
                                <img src="../assets/icon-edit.svg" alt="Icon Details" class="options__img">
                              </figure>
                              <span class="span__detail">Detalles</span>
                            </a>
                          </div>
                        </article>
                      </div>
                    {{/each}}
                  </div>
                </div>
              </section>
            </div>
          </section>
        {{else}}
          <h5 class="items__empty">No hay ventas a las habitaciones ðŸ˜¿</h5>
        {{/if}}
      </div>
    </div>
  </div>
</section>