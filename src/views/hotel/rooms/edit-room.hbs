<div class="sub__header sub__header--fixed">
  <div class="sub__header__container">
    <article class="sub__header__content">
      <section class="section__sub__header">
        <article class="article__sub__header sub__header__actions">
          <div class="sub__header__actions__container">
            <div class="sub__header__action">
              <a href="/rooms" class="sub__header__link">
                <figure class="sub__header__figure">
                  <img src="/assets/icon-back.svg" alt="Icon Back" class="sub__header__img">
                </figure>
              </a>
              <span class="sub__header__span">Volver</span>
            </div>
          </div>
        </article>
      </section>
    </article>
  </div>
</div>
<section class="section__all--forms">
  <div class="container__form__container">
    <div class="container">
      <section class="section__form">
        <form action="/rooms/{{room._id}}/edit" method="POST" class="form">
          <div class="form__content">
            <h2 class="form__title">Editar Habitación</h2>
            <div class="form__img">
              <figure class="login__figure">
                <img src="/assets/logo-aprendedor.webp" alt="Logo Aprendedor" class="login__img">
              </figure>
            </div>
            <section class="form__container">
              <article class="form__group">
                <input type="number" class="form__input" name="numeroHabitacion" id="edit_numero_habitacion" placeholder=" " title="Numero de habitación" value="{{room.numeroHabitacion}}" required>
                <label for="edit_numero_habitacion" class="form__label">Número:</label>
                <span class="form__line"></span>
              </article>
              <article class="form__group form__group--select">
                <label for="edit_categoria_habitacion" class="form__label--select">Selecciona la Categoría:</label>
                <select name="categoriaHabitacion" id="edit_categoria_habitacion" class="form__input" required>
                  <option selected disabled value="">Categoría:</option>
                  {{#each roomCategories}}
                    <option value="{{_id}}" {{#if (eq ../room.categoriaHabitacion._id _id)}}selected{{/if}}>{{nombreCategoriaHabitacion}}</option>
                  {{/each}}
                </select>
              </article>
              <article class="form__group">
                <textarea class="form__input form__textarea" name="descripcionHabitacion" id="edit_descripcion_habitacion" placeholder=" " title="Descrpción de la categoría" required>{{room.descripcionHabitacion}}</textarea>
                <label for="edit_descripcion_habitacion" class="form__label">Descripción:</label>
                <span class="form__line"></span>
              </article>
              <article class="form__group">
                <input type="number" class="form__input" name="precioHabitacion" id="precio_habitacion" placeholder=" " title="Precio de la habitación" required value="{{room.precioHabitacion}}">
                <label for="precio_habitacion" class="form__label">Precio por Noche:</label>
                <span class="form__line"></span>
              </article>
              <button class="form__submit">Actualizar</button>
            </section>
          </div>
        </form>
      </section>
    </div>
  </div>
</section>