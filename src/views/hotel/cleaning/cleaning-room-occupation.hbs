<div class="sub__header sub__header--fixed">
  <div class="sub__header__container">
    <article class="sub__header__content">
      <section class="section__sub__header">
        <article class="article__sub__header sub__header__actions">
          <div class="sub__header__actions__container">
            <div class="sub__header__action">
              <a href="/hotel" class="sub__header__link">
                <figure class="sub__header__action__figure">
                  <img src="/assets/icon-back.svg" alt="Icon Back" class="sub__header__action__img">
                </figure>
              </a>
              <span class="sub__header__span">Volver</span>
            </div>
          </div>
        </article>
      </section>
    </article>
  </div>
</div>
<section class="section__all--forms">
  <div class="container__form__container">
    <div class="container">
      <section class="section__form">
        <form action="/occupation/{{occupation._id}}/cleaning" method="POST" class="form">
          <div class="form__content">
            <h2 class="form__title">Limpieza Intermedia</h2>
            <div class="form__img">
              <figure class="login__figure">
                <img src="/assets/logo-aprendedor.webp" alt="Logo Aprendedor" class="login__img">
              </figure>
            </div>
            <section class="form__container">
              <article class="form__group form__group--select us__sel">
                <label for="habitacion_limpieza" class="form__label--select">Habitación:</label>
                <select name="habitacionLimpieza" class="form__input us__sel" id="habitacion_limpieza">
                  <option value="{{room._id}}" selected>{{room.numeroHabitacion}}</option>
                </select>
              </article>
              <article class="form__group form__group--select">
                <label for="usuario_a_cargo_limpieza" class="form__label--select">Usuario a cargo:</label>
                <select name="usuarioACargoLimpieza" id="usuario_mantenimiento" class="form__input">
                <option value="" selected disabled>Selecciona:</option>
                  {{#each usuarios}}
                    <option value="{{_id}}">{{usuario}}</option>
                  {{/each}}
                </select>
              </article>
              <article class="form__group">
                <textarea class="form__input form__textarea" name="comentariosLimpieza" id="comentarios_limpieza" placeholder=" " title="Descrpción de la categoría"></textarea>
                <label for="comentarios_limpieza" class="form__label">Observaciones:</label>
                <span class="form__line"></span>
              </article>
              <button class="form__submit">Limpiar</button>
            </section>
          </div>
        </form>
      </section>
    </div>
  </div>
</section>