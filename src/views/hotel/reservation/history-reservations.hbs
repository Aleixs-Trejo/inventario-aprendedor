<section class="section__all--views">
  <div class="content__views">
    <div class="container views__container">
      <div class="card__items">
        <div class="items__elements__title">
          <h5 class="items__name">Historial de Reservas</h5>
        </div>
        <div class="sub__header">
          <div class="sub__header__container">
            <article class="sub__header__content">
              <section class="section__sub__header">
                <article class="article__sub__header sub__header__actions">
                  <div class="sub__header__actions__container">
                    <div class="sub__header__action">
                      <a href="/reservations" class="sub__header__link">
                        <figure class="sub__header__figure">
                          <img src="/assets/icon-back.svg" alt="Icon Back" class="sub__header__img">
                        </figure>
                      </a>
                      <span class="sub__header__span">Volver</span>
                    </div>
                  </div>
                </article>
              </section>
            </article>
          </div>
        </div>
        {{#if reservationHistory}}
          {{#if userRole}}
            {{#if (eq userRole "Admin")}}
              <section class="items">
                <div class="items__container__elements">
                  <section class="views__container--elements view__scrollbar">
                    <div class="views__content--elements items__container reservations__history">
                      <article class="items__header items__grid reservations__history">
                        <div class="flex-c-c">Tipo Historial:</div>
                        <div class="flex-c-c">Estado:</div>
                        <div class="flex-c-c">Agregado por:</div>
                        <div class="flex-c-c">Cliente:</div>
                        <div class="flex-c-c">Piso:</div>
                        <div class="flex-c-c">NÃºmero:</div>
                        <div class="flex-c-c">CategorÃ­a:</div>
                        <div class="flex-c-c">DescripciÃ³n:</div>
                        <div class="flex-c-c">Precio:</div>
                        <div class="flex-c-c">Fecha Registro:</div>
                      </article>
                      <div class="items__data--values">
                        {{#each reservationHistory}}
                          <div class="container__data">
                            <article class="items__data items__grid reservations__history">
                              <div class="flex-c-c">{{tipoHistorial}}</div>
                              <div class="flex-c-c"><span class="span__data__item status__reservation">{{reservacionHistorial.estadoReserva}}</span></div>
                              <div class="flex-c-c">{{reservacionHistorial.usuarioReserva.usuario}}</div>
                              <div class="flex-c-c">{{reservacionHistorial.nombreClienteReserva}}</div>
                              <div class="flex-c-c">{{reservacionHistorial.habitacionReserva.pisoHabitacion.numeroPiso}}</div>
                              <div class="flex-c-c">{{reservacionHistorial.habitacionReserva.numeroHabitacion}}</div>
                              <div class="flex-c-c">{{reservacionHistorial.habitacionReserva.categoriaHabitacion.nombreCategoriaHabitacion}}</div>
                              <div class="flex-c-c">{{reservacionHistorial.habitacionReserva.descripcionHabitacion}}</div>
                              <div class="flex-c-c">S/ {{formatCurrency reservacionHistorial.habitacionReserva.precioHabitacion}}</div>
                              <div class="flex-c-c">{{formatDateTime reservacionHistorial.createdAt}}</div>
                            </article>
                          </div>
                        {{/each}}
                      </div>
                    </div>
                  </section>
                </div>
              </section>
            {{/if}}
          {{/if}}
        {{else}}
          <h5 class="items__empty">No hay Historial de Reservas para mostrar ðŸ˜¿</h5>
        {{/if}}
      </div>
    </div>
  </div>
</section>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const $statusReservation = document.querySelectorAll(".status__reservation");

    function statusReservation() {
      $statusReservation.forEach(item => {
        const estado = item.textContent;
        if (estado === "Pendiente") {
          item.style.backgroundColor = "#ff6700";
          item.style.color = "#fff"
        } else if (estado === "Confirmada") {
          item.style.backgroundColor = "#58b56d";
          item.style.color = "#fff"
        } else if (estado === "Proxima") {
          item.style.backgroundColor = "#1b263b";
          item.style.color = "#fff"
        } else if (estado === "Ocupada") {
          item.style.backgroundColor = "#0077b6";
          item.style.color = "#fff"
        } else if (estado === "Extendida") {
          item.style.backgroundColor = "#444";
          item.style.color = "#fff"
        } else if (estado === "Finalizado") {
          item.style.backgroundColor = "#ad2831";
          item.style.color = "#fff"
        }
      });
    };
    statusReservation();
  });
</script>