<section class="section__all--views">
  <div class="content__views">
    <div class="container views__container">
      <div class="card__items">
        <div class="items__elements__title">
          <h5 class="items__name">Pisos</h5>
        </div>
        <div class="sub__header">
          <div class="sub__header__container">
            <article class="sub__header__content">
              <section class="section__sub__header">
                <article class="article__sub__header sub__header__actions">
                  <div class="sub__header__actions__container">
                    <div class="sub__header__action">
                      <a href="/rooms" class="sub__header__link">
                        <figure class="sub__header__figure">
                          <img src="/assets/icon-back.svg" alt="Icon Back" class="sub__header__img">
                        </figure>
                      </a>
                      <span class="sub__header__span">Volver</span>
                    </div>
                    {{#hasPermission permisosRol "crear-piso-hotel"}}
                      <div class="sub__header__action">
                        <a href="/floors/register" class="sub__header__link">
                          <figure class="sub__header__figure">
                            <img src="/assets/icon-add.svg" alt="Icon Add" class="sub__header__img">
                          </figure>
                        </a>
                        <span class="sub__header__span">Nuevo piso</span>
                      </div>
                    {{/hasPermission}}
                    {{#hasPermission permisosRol "historial-piso-hotel"}}
                      <div class="sub__header__action">
                        <a href="/floors/history" class="sub__header__link">
                          <figure class="sub__header__figure">
                            <img src="/assets/icon-history.svg" alt="Icon History" class="sub__header__img">
                          </figure>
                        </a>
                        <span class="sub__header__span">Historial</span>
                      </div>
                    {{/hasPermission}}
                  </div>
                </article>
              </section>
            </article>
          </div>
        </div>
        {{#if floors}}
          <section class="items">
            <div class="items__container__elements">
              <section class="views__container--elements view__scrollbar">
                <div class="views__content--elements items__container floors">
                  <article class="items__header items__grid floors">
                    <div class="flex-c-c">Agregado por:</div>
                    <div class="flex-c-c">NÃºm:</div>
                    <div class="flex-c-c">DescripciÃ³n:</div>
                    <div class="flex-c-c">Fecha Registro:</div>
                    <div class="flex-c-c">Opciones:</div>
                  </article>
                  <div class="items__data--values">
                    {{#each floors}}
                      <div class="container__data">
                        <article class="items__data items__grid floors">
                          <div class="flex-c-c">{{usuarioRegistroPiso.usuario}}</div>
                          <div class="flex-c-c">{{numeroPiso}}</div>
                          <div class="flex-c-c">{{descripcionPiso}}</div>
                          <div class="flex-c-c">{{formatDateTime createdAt}}</div>
                          <div class="flex-c-c items__data--options">
                            {{#hasPermission ../permisosRol "editar-piso-hotel"}}
                              <a href="/floor/{{_id}}/edit" class="options__action">
                                <figure class="options__figure">
                                  <img src="../assets/icon-edit.svg" alt="Icon Edit" class="options__img">
                                </figure>
                              </a>
                            {{/hasPermission}}
                            {{#hasPermission ../permisosRol "eliminar-piso-hotel"}}
                              <a href="/floor/{{_id}}/confirm-delete" class="options__action">
                                <figure class="options__figure">
                                  <img src="../assets/icon-delete.svg" alt="Icon Delete" class="options__img">
                                </figure>
                              </a>
                            {{/hasPermission}}
                          </div>
                        </article>
                      </div>
                    {{/each}}
                  </div>
                </div>
              </section>
            </div>
          </section>
        {{else}}
          <h5 class="items__empty">No hay pisos para mostrar ðŸ˜¿</h5>
        {{/if}}
      </div>
    </div>
  </div>
</section>