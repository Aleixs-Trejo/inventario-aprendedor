<section class="section__all--views">
  <div class="content__views">
    <div class="container views__container">
      <div class="card__items">
        <div class="items__elements__title">
          <h5 class="items__name">Historial de Pisos</h5>
        </div>
        <div class="sub__header">
          <div class="sub__header__container">
            <article class="sub__header__content">
              <section class="section__sub__header">
                <article class="article__sub__header sub__header__actions">
                  <div class="sub__header__actions__container">
                    <div class="sub__header__action">
                      <a href="/floors" class="sub__header__link">
                        <figure class="sub__header__figure">
                          <img src="/assets/icon-back.svg" alt="Icon Back" class="sub__header__img">
                        </figure>
                      </a>
                      <span class="sub__header__span">Volver</span>
                    </div>
                    {{#hasPermission}}
                      <div class="sub__header__action">
                        <a href="/floors/register" class="sub__header__link">
                          <figure class="sub__header__figure">
                            <img src="/assets/icon-add.svg" alt="Icon Add" class="sub__header__img">
                          </figure>
                        </a>
                        <span class="sub__header__span">Nuevo Piso</span>
                      </div>
                    {{/hasPermission}}
                  </div>
                </article>
              </section>
            </article>
          </div>
        </div>
        {{#if floorsHistory}}
          <section class="items">
            <div class="items__container__elements">
              <section class="views__container--elements view__scrollbar">
                <div class="views__content--elements items__container floors__history">
                  <article class="items__header items__grid floors__history">
                    <div class="flex-c-c">Tipo de Registro:</div>
                    <div class="flex-c-c">Hecho por:</div>
                    <div class="flex-c-c">NÃºm:</div>
                    <div class="flex-c-c">DescripciÃ³n:</div>
                    <div class="flex-c-c">Fecha Actividad:</div>
                  </article>
                  <div class="items__data--values">
                    {{#each floorsHistory}}
                      <div class="container__data">
                        <article class="items__data items__grid floors__history">
                          <div class="flex-c-c">{{tipoHistorial}}</div>
                          <div class="flex-c-c">{{pisoHabitacionHistorial.usuarioRegistroPiso.usuario}}</div>
                          <div class="flex-c-c">{{pisoHabitacionHistorial.numeroPiso}}</div>
                          <div class="flex-c-c">{{pisoHabitacionHistorial.descripcionPiso}}</div>
                          <div class="flex-c-c">{{formatDateTime pisoHabitacionHistorial.createdAt}}</div>
                        </article>
                      </div>
                    {{/each}}
                  </div>
                </div>
              </section>
            </div>
          </section>
        {{else}}
          <h5 class="items__empty">No hay historial para mostrar ðŸ˜¿</h5>
        {{/if}}
      </div>
    </div>
  </div>
</section>